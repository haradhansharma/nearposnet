{{ header }}{{ column_left }}
<div id="content">
<div class="page-header">
<div class="container-fluid">
  <div class="pull-right">
    <button type="button" data-toggle="tooltip" title="{{ button_delete }}" class="btn btn-danger" onclick="confirm('{{ text_confirm }}') ? $('#form-return_report').submit() : false;"><i class="fa fa-trash-o"></i></button>
  </div>
<h1>{{ heading_title }}</h1>
<ul class="breadcrumb">
{% for breadcrumb in breadcrumbs %}
<li><a href="{{ breadcrumb['href'] }}">{{ breadcrumb.text }}</a></li>
{% endfor %}
</ul>
</div>
</div>
<div class="container-fluid">
{% if error_warning %}
<div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
<button type="button" class="close" data-dismiss="alert">&times;</button>
</div>
{% endif %}
{% if success %}
<div class="alert alert-success"><i class="fa fa-check-circle"></i> {{ success }}
<button type="button" class="close" data-dismiss="alert">&times;</button>
</div>
{% endif %}
<div class="panel panel-default">
<div class="panel-heading">
  <h3 class="panel-title"><i class="fa fa-list"></i> {{ text_list }}</h3>
</div>
<div class="panel-body">
        <div class="well">
          <div class="row">
            <div class="col-sm-4">
              <div class="form-group">
                <label class="control-label" for="input-filter-name">{{ entry_name }}</label>
                <input type="text" name="filter_product" onKeyDown="if(event.keyCode==13) $('#button-filter').trigger('click');" value="{{ filter_product }}" placeholder="{{ entry_name }}" id="input-filter-name" class="form-control"/>
                <input type="hidden" name="product_id" value="{{ filter_product }}"/>
              </div>
            </div>
            <div class="col-sm-4 hide">
              <div class="form-group">
                <label class="control-label">{{ entry_product_id }}</label>
                <div class="input-group">
                  <span class="input-group-addon">
                    {{ entry_form }}
                  </span>
                  <input type="text" name="filter_product_id_form" onKeyDown="if(event.keyCode==13) $('#button-filter').trigger('click');" value="{{ filter_product_id_form }}" class="form-control" id="input-filter_product_id_form"/>
                  <span class="input-group-addon ">
                    {{ entry_to }}
                  </span>
                  <input type="text" name="filter_product_id_to" onKeyDown="if(event.keyCode==13) $('#button-filter').trigger('click');" value="{{ filter_product_id_to }}" class="form-control" data-product_id-format="YYYY-MM-DD" id="input-filter_product_id_to"/>
                </div>
              </div>
            </div>
            <div class="col-sm-4">
              <div class="form-group">
                <label class="control-label">{{ entry_price }}</label>
                <div class="input-group">
                  <span class="input-group-addon">
                    {{ entry_form }}
                  </span>
                  <input type="text" name="filter_price_form" onKeyDown="if(event.keyCode==13) $('#button-filter').trigger('click');" value="{{ filter_price_form }}" class="form-control" id="input-filter_price_form"/>
                  <span class="input-group-addon ">
                    {{ entry_to }}
                  </span>
                  <input type="text" name="filter_price_to" onKeyDown="if(event.keyCode==13) $('#button-filter').trigger('click');" value="{{ filter_price_to }}" class="form-control" id="input-filter_price_to"/>
                </div>
              </div>
            </div>
            <div class="col-sm-4">
              <div class="form-group">
                <label class="control-label">{{ entry_quantity }}</label>
                <div class="input-group">
                  <span class="input-group-addon">
                    {{ entry_form }}
                  </span>
                  <input type="text" name="filter_quantity_form" onKeyDown="if(event.keyCode==13) $('#button-filter').trigger('click');" value="{{ filter_quantity_form }}" class="form-control" id="input-filter_quantity_form"/>
                  <span class="input-group-addon ">
                    {{ entry_to }}
                  </span>
                  <input type="text" name="filter_quantity_to" onKeyDown="if(event.keyCode==13) $('#button-filter').trigger('click');" value="{{ filter_quantity_to }}" class="form-control" id="input-filter_quantity_to"/>
                </div>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-sm-4">
              <div class="form-group">
                <label class="control-label" for="input-model">{{ entry_model }}</label>
                <input type="text" name="filter_model" placeholder="{{ entry_model }}" onKeyDown="if(event.keyCode==13) $('#button-filter').trigger('click');" value="{{ filter_model }}" class="form-control" id="input-model"/>
              </div>
            </div>
            <div class="col-sm-4">
              <div class="form-group">
                <label class="control-label">{{ entry_date }}</label>
                <div class="input-group">
                  <span class="input-group-addon">
                    {{ entry_form }}
                  </span>
                  <input type="text" name="filter_date_form" onKeyDown="if(event.keyCode==13) $('#button-filter').trigger('click');"  value="{{ filter_date_form }}" data-date-format="YYYY-MM-DD" class="form-control datefrom" id="input-filter_date_form"/>
                  <span class="input-group-addon ">
                    {{ entry_to }}
                  </span>
                  <input type="text" name="filter_date_to" data-date-format="YYYY-MM-DD" onKeyDown="if(event.keyCode==13) $('#button-filter').trigger('click');" value="{{ filter_date_to }}" class="form-control dateto" id="input-filter_date_to"/>
                </div>
              </div>
            </div>
            <div class="col-sm-4 pull-right">
              <div class="form-group" style="margin-top:20px;">
                <button type="button" id="button-filter" class="col-sm-5 btn btn-primary"><i class="fa fa-filter"></i> {{ button_filter }}</button>
                <a href="{{ reset }}" style="margin-left:2px;" id="button-reset" class="col-sm-5 btn btn-danger"><i class="fa fa-refresh"></i> {{ button_reset }}</a>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="panel-body">
        <form action="{{ delete }}" method="post" enctype="multipart/form-data" id="form-return_report" class="addtrack">
          <div class="table-responsive">
            <table class="table table-bordered table-hover">
              <thead>
                <tr>
                  <td style="width: 1px;" class="text-center"><input type="checkbox" onclick="$('input[name*=\'selected\']').prop('checked', this.checked);" /></td>
                  <td class="text-center">{{ entry_image }}</td>
                  <td class="text-center hide">{% if sort == 'product_id' %}
                    <a href="{{ sort_product_id }}" class="{{ order|lower }}">{{ entry_product_id }}</a>
                     {% else %}
                    <a href="{{ sort_product_id }}">{{ entry_product_id }}</a>
                    {% endif %}</td>
                    <td class="text-center">{% if sort == 'order_id' %}
                    <a href="{{ sort_order_id }}" class="{{ order|lower }}">{{ entry_order_id }}</a>
                     {% else %}
                    <a href="{{ sort_order_id }}">{{ entry_order_id }}</a>
                    {% endif %}</td>
                    <td class="text-left">{% if sort == 'name' %}
                    <a href="{{ sort_name }}" class="{{ order|lower }}">{{ entry_name }}</a>
                     {% else %}
                    <a href="{{ sort_name }}">{{ entry_name }}</a>
                    {% endif %}</td>
                    <td class="text-left">{% if sort == 'model' %}
                    <a href="{{ sort_model }}" class="{{ order|lower }}">{{ entry_model }}</a>
                     {% else %}
                    <a href="{{ sort_model }}">{{ entry_model }}</a>
                    {% endif %}</td>
                    <td class="text-left">{% if sort == 'reason' %}
                    <a href="{{ sort_reason }}" class="{{ order|lower }}">{{ entry_reason }}</a>
                     {% else %}
                    <a href="{{ sort_reason }}">{{ entry_reason }}</a>
                    {% endif %}</td>
                    <td class="text-left">{% if sort == 'price' %}
                    <a href="{{ sort_price }}" class="{{ order|lower }}">{{ entry_price }}</a>
                     {% else %}
                    <a href="{{ sort_price }}">{{ entry_price }}</a>
                    {% endif %}</td>
                    <td class="text-left">{% if sort == 'quantity' %}
                    <a href="{{ sort_quantity }}" class="{{ order|lower }}">{{ entry_quantity }}</a>
                     {% else %}
                    <a href="{{ sort_quantity }}">{{ entry_quantity }}</a>
                    {% endif %}</td>
                    <td class="text-left">{% if sort == 'date_added' %}
                    <a href="{{ sort_date_added }}" class="{{ order|lower }}">{{ entry_date_added }}</a>
                     {% else %}
                    <a href="{{ sort_date_added }}">{{ entry_date_added }}</a>
                    {% endif %}</td>
                    <td class="text-left">{{ column_action }}</td>
                </tr>
              </thead>
                {% if return_reports %}
                {% for report in return_reports %}
                  <tr>
                  <td class="text-center">{% if report.return_id in selected %}
                    <input type="checkbox" name="selected[]" value="{{ report['return_id'] }}" checked="checked" />
                    {% else %}
                    <input type="checkbox" name="selected[]" value="{{ report['return_id'] }}" />
                    {% endif %}</td>
                    <td class="text-center">{% if report.image %} <img src="{{ report.image }}" alt="{{ report.name }}" class="img-thumbnail" />  {% else %} <span class="img-thumbnail list"><i class="fa fa-camera fa-2x"></i></span> {% endif %}</td>
                    <td class="text-center hide">{{ report.product_id }}</td>
                    <td class="text-center">{{ report.order_id }}</td>
                    <td class="text-left">{{ report.name }}</td>
                    <td class="text-left">{{ report.model }}</td>
                    <td class="text-left">{{ report.reason }}</td>
                    <td class="text-left">{{ report.price }}</td>
                    <td class="text-left">{{ report.quantity }}</td>
                    <td class="text-left">{{ report.date_added }}</td>
                    <td class="text-left"><a href="{{ report.print }}" target="_blank" data-toggle="tooltip" title="{{ button_print }}" class="btn btn-primary"><i class="fa fa-print"></i></a></td>
                  </tr>
                   {% endfor %}
                   {% else %}
                  <tr>
                    <td class="text-center" colspan="13">{{ text_no_results }}</td>
                  </tr>
                  {% endif %}
            </table>
          </div>
        </form>
        <div class="row">
          <div class="col-sm-6 text-left">{{ pagination }}</div>
          <div class="col-sm-6 text-right">{{ results }}</div>
        </div>
      </div>
    </div>
  </div>
</div>

 <script type="text/javascript"><!--
$('.datefrom').datetimepicker({
  pickTime: false
});
$('.dateto').datetimepicker({
  pickTime: false
}); 
//--></script>
 <script type="text/javascript"><!--
$('#button-filter').on('click', function() {
  var url = '';

  var filter_product = $('input[name=\'product_id\']').val();
  
  if (filter_product) {
    url += '&filter_product=' + encodeURIComponent(filter_product);
  }

  var filter_model = $('input[name=\'filter_model\']').val();
  
  if (filter_model) {
    url += '&filter_model=' + encodeURIComponent(filter_model);
  }

  var filter_product_id_form = $('input[name=\'filter_product_id_form\']').val();

  if (filter_product_id_form) {
    url += '&filter_product_id_form=' + encodeURIComponent(filter_product_id_form);
  }

  var filter_product_id_to = $('input[name=\'filter_product_id_to\']').val();

  if (filter_product_id_to) {
    url += '&filter_product_id_to=' + encodeURIComponent(filter_product_id_to);
  }

  var filter_price_form = $('input[name=\'filter_price_form\']').val();

  if (filter_price_form) {
    url += '&filter_price_form=' + encodeURIComponent(filter_price_form);
  }

  var filter_price_to = $('input[name=\'filter_price_to\']').val();

  if (filter_price_to) {
    url += '&filter_price_to=' + encodeURIComponent(filter_price_to);
  }

  var filter_quantity_form = $('input[name=\'filter_quantity_form\']').val();

  if (filter_quantity_form) {
    url += '&filter_quantity_form=' + encodeURIComponent(filter_quantity_form);
  }

  var filter_quantity_to = $('input[name=\'filter_quantity_to\']').val();

  if (filter_quantity_to) {
    url += '&filter_quantity_to=' + encodeURIComponent(filter_quantity_to);
  }

  var filter_date_form = $('input[name=\'filter_date_form\']').val();

  if (filter_date_form) {
    url += '&filter_date_form=' + encodeURIComponent(filter_date_form);
  }

  var filter_date_to = $('input[name=\'filter_date_to\']').val();

  if (filter_date_to) {
    url += '&filter_date_to=' + encodeURIComponent(filter_date_to);
  }

  location = 'index.php?route=possetting/return_report&user_token={{ user_token }}' + url;
});

$('input[name=\'filter_product\']').autocomplete({
  'source': function(request, response) {
    $.ajax({
      url: 'index.php?route=catalog/product/autocomplete&user_token={{ user_token }}&filter_name=' +  encodeURIComponent(request),
      dataType: 'json',
      success: function(json) {
         json.unshift({
          product_id: 0,
          name: '{{ text_none }}'
        });
        response($.map(json, function(item) {
          return {
            label: item['name'],
            value: item['product_id']
          }
        }));
      }
    });
  },
  'select': function(item) {
    $('input[name=\'filter_product\']').val(item['label']);
    $('input[name=\'product_id\']').val(item['label']);
  }
});

$('input[name=\'filter_model\']').autocomplete({
  'source': function(request, response) {
    $.ajax({
      url: 'index.php?route=catalog/product/autocomplete&user_token={{ user_token }}&filter_model=' +  encodeURIComponent(request),
      dataType: 'json',
      success: function(json) {
         json.unshift({
          product_id: 0,
          model: '{{ text_none }}'
        });
        response($.map(json, function(item) {
          return {
            label: item['model'],
            value: item['product_id']
          }
        }));
      }
    });
  },
  'select': function(item) {
    $('input[name=\'filter_model\']').val(item['label']);
  }
});


//--></script>
