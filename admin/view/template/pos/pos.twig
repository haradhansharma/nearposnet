	<script type='text/javascript' src="view/javascript/jquery/escroll.js"></script>
<link type="text/css" href="view/stylesheet/pos.css" rel="stylesheet" media="screen" />
{{ header }}
{{ column_left }}
<div id="content"> 
	<div id="dash">
			<div class="col-md-12 col-sm-12 col-xs-12 padd0 dashbox loaddashbord">
				{{ dashboard }}
			</div>
	</div>
<!-- sidebar start here -->
<div class="sidebar">

	<div class="row">
	    <div class="col-md-3">
	        <ul class="list-unstyled" id="accordion1">
	        	{% set i =1 %}
	        	{% for sidebar in sidebars %}
	            <li class="panel">
	            	<button class="tmdorderbtn" data-toggle="collapse" data-parent="#accordion1" data-target="#firstLink{{ i }}"><i class="{{ sidebar.fa }}"></i></button>
	                <ul id="firstLink{{ i }}" class="collapse list-unstyled">
	                    <li>
	                    	<a href="{{ sidebar.href }}" rel="{{ sidebar.href }}" class="btn btn-primary tmdload" data-toggle="modal" data-target="#sidebarmodal">{{ sidebar.name }}<i class="{{  sidebar.fa }}"></i></a>
	                    </li>
	                </ul>
	            </li>
	            {% set i=i+1 %}
	            {% endfor %}
        		<li class="clickexpend" rel="1"><a href="javascript:;"  ><i class="fa fa-expand" aria-hidden="true"></i></a></li>
	        </ul>
	    </div>
	</div>
</div>
<!-- sidebar end here -->


<div class="container-fluid">
	<div id="dash">
		<div class="row">
			<div class="col-md-12 col-sm-12 col-xs-12 padd0 dashbox">
				<div class="col-md-6 col-sm-6 col-xs-12">
					<div class="leftside1">
						{{ categorysearch }}
					</div>
					<div class="leftside" id="maincontainer">
						<div class="icon">
							<a href="javascript:;" class="showsubcate" rel="0"><i class="fa fa-home" aria-hidden="true"></i></a>
							<span class="breadcrumbsload"> </span>

							<div class="pull-right">
							<!-- 24 09 2019 -->
								<a rel="{{ qrcode }}" class="btn btn-primary readqr"><i class="fa fa-qrcode"></i></a>
								<a rel="{{ productlist }}" class="btn btn-primary listproduct">{{ button_addproduct }}</a>
							<!-- 24 09 2019 -->
								<a rel="{{ noncatalog }}" class="btn posproduct btn-primary">{{ button_product }}</a>
							</div>

						</div>
						<div class="scrollbox3">
							<div class="allcate">
								<div  id="wait" class="loader hide">
									<img src="view/image/loader.gif" 	alt="loading" title="loading"/>
								</div>
								{{ allcategory }}
							</div>
						</div>
					</div>
				</div>

				<div class="col-md-6 col-sm-6 col-xs-12 ">

					<div class="rightside">
						<div class="tablebox">
							{% if customer_name %}
								<h4 style="padding: 2px;">{{ customer_name }}</h4>
							{% endif %}
							<table>
								<tr>
									<th width="15%">{{ text_item }}</th>
									<th width="20%">{{ text_name }}</th>
									<th width="15%">{{ text_price }}</th>
									<th width="15%">{{ text_qty }}</th>
									<th width="15%">{{ text_total }}</th>
									<th width="20%">{{ text_action }}</th>
								</tr>
							</table>

							<div class="scrollbox4">
								<div class="loadcartclass">
								</div>
							</div>

							<div class="value col-sm-12 sub-totals">
								<div class="extra-options">
									<div class="input-group extraoptions padd col-sm-12" id="manualdiscount">
										<input placeholder="{{ entry_discount }}" name="discount" id="discount" type="text" class="form-control">
										<select name="discount_type" id="discount-type" class="form-control">
											<option value="F">{{ text_fixed }}</option>
											<option value="P">{{ text_percent }}</option>
										</select>
										<input type="button" value="{{ button_discount }}" data-loading-text="{{ text_loading }}"  class="btn cartcoupon manualdiscount" />
									</div>

									<div class="col-sm-12 padd">
										<div class="input-group" id="coupondiscount">
											<input type="text" name="coupon" value="{{ coupon }}" placeholder="{{ entry_coupon }}" id="input-coupon" class="form-control" />
											<span class="input-group-btn">
											<input type="button" value="{{ button_coupon }}"   data-loading-text="{{ text_loading }}"  class="btn cartcoupon  coupondiscount" />
											</span>
										</div>
										<div class="input-group"id="voucherdiscount">
											<input type="text" name="voucher" value="{{ voucher }}" placeholder="{{ entry_voucher }}" id="input-voucher" class="form-control" />
											<span class="input-group-btn">
											<input type="submit" value="{{ button_voucher }}"   data-loading-text="{{ text_loading }}"  class="btn cartcoupon voucherdiscount"/>
											</span>
										</div>
									</div>
								</div>

								<div class="col-md-6 col-sm-6 col-xs-12">
									<table class="table totalload">
										<tbody>
										</tbody>

									</table>
								</div>
								<div class="col-md-6 col-sm-6 col-xs-12 padd0">

									<a rel="{{ paypopup }}" class="btn btn-primary paynow" style="margin-bottom:5px;">  <i class="fa fa-money" aria-hidden="true" style="margin-right:5px;"></i> {{ button_paynow }}</a>
									<a rel="{{ holdon }}" class="btn btn-primary emptyholdon" style=" background: red; margin-left: 10px; margin-bottom:5px;" >  <i class="fa fa-pause" style="margin-right:5px;"></i>
									{{ button_hold }}</a>
									<a type="button" class="btn btn-primary clearcart">  <i class="fa fa-eraser"></i>{{ button_clearcart }}</a>

								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	  </div>
  </div>
</div>
    </div>
