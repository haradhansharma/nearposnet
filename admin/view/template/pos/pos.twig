<script type="text/javascript">
var utoken = '{{ user_token }}';
$(document).on('click','.addsplitpayment',function() {
	$('#splitpayment').toggle('show',function(){
		$val = $('#splitpayment').attr('class');
		if ($val == 'hide') {
			$('#splitpayment').attr('class','show');
			html1 = '<option value="split" selected="selected">{{ text_split }}</option>';
			$('#selectcard').html(html1);
			$('#selectcard').trigger('change')
		}else{
			$('#splitpayment').attr('class','hide');
			html2 = '';
			{% for result in setting_paymentmethods %}
			html2 += '<option value="{{ result.name }}">{{ result.name }}</option>';
			{% endfor %}
			$('#selectcard').html(html2);
			$('#selectcard').trigger('change')
		}
	});
});
</script>
