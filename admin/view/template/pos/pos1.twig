<div class="pos-design1">
{{ header }}
<script type='text/javascript' src="view/javascript/jquery/escroll.js"></script>
<link type="text/css" href="view/stylesheet/pos1.css" rel="stylesheet" media="screen" />
{{ column_left }}
<div id="content">
	<div id="dash">
			<div class="col-md-12 col-sm-12 col-xs-12 padd0 dashbox">
				{{ dashboard }}
				<ul class="list-inline box">
					<li class="clickexpend" rel="1"><a href="javascript:;"  ><i class="fa fa-expand" aria-hidden="true"></i></a></li>
				 <li class="user">
					 <a href="{{ home }}">
						 <img src="{{ image }}" alt="John Doe" title="admin" id="user-profile" class="img-circle">
						 {% if customer_name %}
							 {{ customer_name }}
						 {% endif %}
						</a>
				 </li>
				</ul>
		</div>
  </div>

  <div class="container-fluid">
		<div class="row">
			<div class="col-sm-7 col-md-8 col-lg-8 col-xs-12">
				<div class="col-sm-12 col-xs-12 boxbg">
					<div class="row">
						<div class="col-md-4 col-lg-4 col-sm-4 col-xs-12">
							 <ul class="icon list-inline">
									<li>
										<a rel="{{ qrcode }}" class="btn btn-primary readqr"><i class="fa fa-qrcode"></i></a>
									</li>
									<li>
										<a rel="{{ productlist }}" class="btn btn-primary listproduct"><span class="visible-sm visible-md visible-xs"><i class="fa fa-th-list"></i></span><span class="hidden-sm hidden-md hidden-xs">{{ button_addproduct }}</span></a>
									</li>
									<li>
										<a rel="{{ noncatalog }}" class="btn posproduct btn-primary"><span class="visible-sm visible-md visible-xs"><i class="fa fa-plus"></i></span><span class="hidden-sm hidden-md hidden-xs">{{ button_product }}</span></a>
									</li>
							 </ul>
						</div>
						 <div class="col-md-4 col-lg-4 col-sm-4 col-xs-12">
							 <!--static-->
							<div class="search">
								<input name="filter_customer" value="" placeholder="Customer search" type="text" class="form-control"/>
								<input name="filter_customer_id" value="" type="hidden" />
								<button type="button" class="btn btn-srch addfiltercustomer"><i class="fa fa-search" aria-hidden="true"></i></button>
							</div>
							 <!--static-->
						</div>
						<div class="col-md-4 col-lg-4 col-sm-4 col-xs-12">
							 {{ categorysearch }}
						</div>
					</div>
					<br/>

					<div class="scrollbox3" tabindex="0">
						<div id="wait" class="loader hide">
							<img src="view/image/loader.gif" 	alt="loading" title="loading"/>
						</div>
						<div class="row subcategories"></div>
						<div class="row">
							<div class="col-md-12 products"></div>
						</div>
					 </div>
			  </div>

				<div class="row categories">
					{{ allcategory }}
				</div>

				<ul class="list-inline pull-right btnbox">
					{% set i =1 %}
					{% for sidebar in sidebars %}
						<li>
								<a href="{{ sidebar.href }}" rel="{{ sidebar.href }}" class="btn btn-block btn-hold tmdload" data-toggle="modal" data-target="#sidebarmodal"><i class="{{ sidebar.fa }}"></i> {{  sidebar.name }}</a>
						</li>
						{% set i=i+1 %}
						{% endfor %}
			     <li>
			       <a rel="{{ holdon }}" class="btn btn-primary btn-block btn-hold emptyholdon">  <i class="fa fa-pause"></i>
			       {{ button_hold }}</a>
			     </li>
				</ul>
			</div>

			<div class="col-sm-5 col-md-4 col-lg-4 col-xs-12 padd0">
				<div class="col-sm-12 col-xs-12 boxbg1">
						<h3>{{ entry_checkout }}</h3>
						<div class="tablebox">
							<table>
								<tr>
									<th width="44%">{{ text_name }}</th>
									<th width="18%">{{ text_price }}</th>
									<th width="20%">{{ text_qty }}</th>
									<th width="18%">{{ text_total }}</th>
								</tr>
							</table>
							<div class="scrollbox4" tabindex="0">
								<div class="loadcartclass"></div>
						  </div>
							<div class="value col-sm-12 sub-totals">
								<table class="table table1">
									<tbody>
										<tr>
											<td class="text-left"><strong>{{ entry_discount }}(%)</strong></td>
											<td class="text-right">
												<div class="input-group extraoptions" id="manualdiscount">
													<input placeholder="{{ entry_discount }}" name="discount" id="discount" type="text" class="form-control">
													<select name="discount_type" id="discount-type" class="form-control">
														<option value="F">{{ text_fixed }}</option>
														<option value="P">{{ text_percent }}</option>
													</select>
													<input type="button" value="{{ button_discount }}" data-loading-text="{{ text_loading }}"  class="btn cartcoupon manualdiscount" />
												</div>
											</td>
										</tr>
										<tr>
											<td class="text-left"><strong>{{ button_coupon }}</strong></td>
											<td class="text-right">
												<div class="input-group" id="coupondiscount">
													<input type="text" name="coupon" value="{{ coupon }}" placeholder="{{ entry_coupon }}" id="input-coupon" class="form-control discount" />
													<span class="input-group-btn">
													<input type="button" value="{{ button_coupon }}"   data-loading-text="{{ text_loading }}"  class="btn cartcoupon  coupondiscount" />
													</span>
												</div>
											</td>
										</tr>
									</tbody>
								</table>
								<table class="table table1 totalload">
									<tbody>
									</tbody>
								</table>
				     </div>
				   </div>
				</div>
				<div class="col-sm-12 col-xs-12 padd0">
					<a type="button" class="btn btn-block btn-clear clearcart">  <i class="fa fa-eraser"></i> {{ button_clearcart }}</a>
				</div>
				<div class="paynowbox">
					 <a rel="{{ paypopup }}" class="btn btn-primary paynow btn-block btn-paynow">  <i class="fa fa-money" aria-hidden="true"></i> {{ button_paynow }}</a>
				</div>
		  </div>

		</div>
	  </div>
  </div>
</div>

<input type="hidden" value="2" id="page" />

