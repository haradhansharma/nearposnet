<div id="printModal" class="modalCart modal fade" role="dialog">
  <div class="modal-dialog modal-sm">
		<!-- Modal content-->
		<div class="modal-content">
		  <div class="modal-header">
			<button type="button" class="close" data-dismiss="modal">&times;</button>
		  </div>
		  <div class="modal-body">
			  <div class="row">
				<form action="" method="post" enctype="multipart/form-data" id="form-print">
					<div class="form-group">
						 <label class="col-sm-12 control-label" for="input-orderid">{{ entry_orderid }}</label>
						 <div class="col-sm-12">
							 <input type="text" name="orderid" value="" class="orderid form-control" placeholder="" id="input-orderid"/>
							 <button type="button" class="btn btn-primary order-id">{{ button_print }}</button>
						 </div>
					</div>
				 </form>
			  </div>
		  </div>
		</div>
	</div>
</div>
<!--PrintOrder Popup-->
<!--Product Popup start-->
<div id="productModal" class="modalCart modal fade" role="dialog">
  <div class="modal-dialog modal-md">
		<!-- Modal content-->
		<div class="modal-content">
		  <div class="modal-header">
			<button type="button" class="close" data-dismiss="modal">&times;</button>
		  </div>
		  <div class="modal-body">
			  <div class="row">
				<form action="" method="post" enctype="multipart/form-data" id="form-product">
					<div class="form-group row">
						<label class="col-sm-2 control-label" for="input-name">{{ entry_name }}</label>
						<div class="col-sm-10">
							<input type="text" name="name" value="" class="form-control" placeholder="" id="input-name"/>
						</div>
					</div>
					<div class="form-group row">
						<label class="col-sm-2 control-label" for="input-price">{{ entry_price }}</label>
						<div class="col-sm-10">
							<input type="text" name="price" value="" class="form-control" placeholder="" id="input-price"/>
						</div>
					</div>
					<div class="text-center">
						<button type="button" class="btn btn-primary">{{ button_submit }}</button>
					</div>
				 </form>
			  </div>
		  </div>
		</div>
	</div>
</div>
<!--Product Popup end-->
<div id="addModal" class="modal fade" role="dialog">
  <div class="modal-dialog modal-md">
		<div class="modal-content">
		  <div class="modal-header">
			<button type="button" class="close" data-dismiss="modal">&times;</button>
		  </div>
		  <div class="modal-body">
				{{ customerform }}
      </div>
        </div>
    </div>
</div>
<script type="text/javascript">
var utoken = '{{ user_token }}';
$(document).on('click','.addsplitpayment',function() {
	$('#splitpayment').toggle('show',function(){
		$val = $('#splitpayment').attr('class');
		if ($val == 'hide') {
			$('#splitpayment').attr('class','show');
			html1 = '<option value="split" selected="selected">{{ text_split }}</option>';
			$('#selectcard').html(html1);
			$('#selectcard').trigger('change')
		}else{
			$('#splitpayment').attr('class','hide');
			html2 = '';
			{% for result in setting_paymentmethods %}
			html2 += '<option value="{{ result.name }}">{{ result.name }}</option>';
			{% endfor %}
			$('#selectcard').html(html2);
			$('#selectcard').trigger('change')
		}
	});
});
</script>
