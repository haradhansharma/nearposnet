<div class="pos-design2">
{{ header }}
<script type='text/javascript' src="view/javascript/jquery/escroll.js"></script>
<link type="text/css" href="view/stylesheet/pos1.css" rel="stylesheet" media="screen" />
{{ column_left }}
<div id="content">
	<div id="dash">
			<div class="col-md-12 col-sm-12 col-xs-12 padd0 dashbox">
				{{ dashboard }}
				<ul class="list-inline box">
					<li class="clickexpend" rel="1"><a href="javascript:;"  ><i class="fa fa-expand" aria-hidden="true"></i></a></li>
				</ul>
		</div>
  </div>

  <div class="container-fluid">
		<div class="row">
			<div class="col-sm-5 col-md-4 col-lg-4 col-xs-12 paddright">
				<div class="col-sm-12 col-xs-12 leftbox">
					<div class="row">
						<div class="col-md-6 col-lg-6 col-sm-6 col-xs-12">
							<!--static-->
							 <div class="input-group search">
								 <input name="filter_customer" value="" placeholder="Customer search" type="text" class="form-control"/>
								 <input name="filter_customer_id" value="" type="hidden" />
								 <span class="input-group-btn">
									 <button type="button" class="btn btn-srch addfiltercustomer"><i class="fa fa-search" aria-hidden="true"></i></button>
								 </span>
							 </div>
							 <!--static-->
						 </div>
						 <div class="col-md-6 col-lg-6 col-sm-6 col-xs-12">
							 {{ categorysearch }}
						 </div>
					</div>
					<div class="row userbox">
							<div class="col-sm-12 col-xs-12">
								<!--static-->
									<img src="{{ image }}" alt="John Doe" title="admin" id="user-profile" class="img-user">
								<!--static-->
									<div class="detail">
										{% if customer_name %}
											<h3>{{ customer_name }}</h3>
										{% endif %}
									</div>
							</div>

					</div>

						<div class="tablebox">
							<table>
								<tr>
									<th width="40%">{{ text_name }}</th>
									<th width="20%">{{ text_price }}</th>
									<th width="20%">{{ text_qty }}</th>
									<th width="20%">{{ text_total }}</th>
								</tr>
							</table>
							<div class="scrollbox4" tabindex="0">
								<div class="loadcartclass"></div>
						  </div>
							<div class="value col-sm-12 sub-totals">
								<button type="button" class="btn-coupon btn" data-toggle="modal" data-target="#couponModal">{{ button_appcoupon }}</button>
								<button type="button" class="btn-coupon btn" data-toggle="modal" data-target="#discountModal">{{ button_appdiscount }}</button>
								<table class="table table1 totalload">
									<tbody>
									</tbody>
								</table>
				     </div>
				   </div>
				</div>
		  </div>

			<div class="col-sm-7 col-md-8 col-lg-8 col-xs-12">
				<div class="col-sm-12 col-xs-12 boxbg2">
					<div class="row">
						<div class="col-md-20 col-lg-2 col-sm-3 col-xs-6">
							 <div class="iconbox">
								  <a rel="{{ noncatalog }}" class="btn posproduct btn-primary" data-toggle="tooltip" title="{{ button_product }}" data-original-title="{{ button_product }}"><i class="fa fa-plus"></i></a>
							 </div>
						</div>
						<div class="col-md-20 col-lg-2 col-sm-3 col-xs-6">
							 <div class="iconbox">
									<a rel="{{ qrcode }}" class="btn btn-primary readqr" data-toggle="tooltip" title="{{ entry_qrcode }}" data-original-title="{{ entry_qrcode }}"><i class="fa fa-qrcode"></i></a>
							 </div>
					 </div>
					 <div class="col-md-20 col-lg-2 col-sm-3 col-xs-6">
							<div class="iconbox">
								 <a rel="{{ productlist }}" class="btn btn-primary listproduct" data-toggle="tooltip" title="{{ button_addproduct }}" data-original-title="{{ button_addproduct }}"><i class="fa fa-th-list"></i></a>
							</div>
					 </div>
					 <span class="categories">
						 {{ allcategory }}
					 </span>
				 </div>
				 <div class="row">
					<div class="scrollbox3" tabindex="0">
						<div id="wait" class="loader hide">
							<img src="view/image/loader.gif" 	alt="loading" title="loading"/>
						</div>
						<div class="row subcategories"></div>
						<div class="row">
							<div class="col-md-12 products"></div>
						</div>
					 </div>
			  </div>

				<div class="row btnbox">
					{% set i =1 %}
					{% for sidebar in sidebars %}
						<div class="col-md-40 col-lg-2 col-sm-3 col-xs-6">
								<a href="{{ sidebar.href }}" rel="{{ sidebar.href }}" class="btn btn-block btn-hold tmdload" data-toggle="modal" data-target="#sidebarmodal"><i class="{{ sidebar.fa }}"></i> {{  sidebar.name }}</a>
						</div>
						{% set i=i+1 %}
						{% endfor %}
					 <div class="col-md-40 col-lg-2 col-sm-3 col-xs-6">
						 <button type="button" class="btn btn-block btn-hold clearcart"><i class="fa fa-eraser" aria-hidden="true"></i> {{ button_clearcart }}</button>
					 </div>
					 <div class="col-md-40 col-lg-2 col-sm-3 col-xs-6">
							 <button rel="{{ holdon }}" type="button" class="btn btn-block btn-hold emptyholdon"><i class="fa fa-pause" aria-hidden="true"></i> {{ button_hold }}</button>
					 </div>
					 <div class="col-md-40 col-lg-2 col-sm-3 col-xs-6">
						 <div class="paynowbox">
							 <a rel="{{ paypopup }}" class="btn btn-primary paynow btn-block btn-paynow">  <i class="fa fa-money" aria-hidden="true"></i> {{ button_paynow }}</a>
						</div>
					</div>
			</div>

				<ul class="list-inline pull-right btnbox">

				</ul>
			</div>



		</div>
	  </div>
  </div>
</div>

<input type="hidden" value="2" id="page" />

