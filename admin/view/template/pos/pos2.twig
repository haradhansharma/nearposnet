<div id="couponModal" class="modal fade" role="dialog">
  <div class="modal-dialog modal-md">
		<div class="modal-content">
		  <div class="modal-header">
				 <h2 class="modal-title"><b>Enter Coupon code</b></h2>
			<button type="button" class="close" data-dismiss="modal">&times;</button>
		  </div>
		  <div class="modal-body">
				<div class="input-group" id="coupondiscount">
					<input type="text" name="coupon" value="{{ coupon }}" placeholder="{{ entry_coupon }}" id="input-coupon" class="form-control" />
					<span class="input-group-btn">
					<input type="button" value="{{ button_coupon }}"   data-loading-text="{{ text_loading }}"  class="btn cartcoupon  coupondiscount1" />
					</span>
				</div>
      </div>
    </div>
  </div>
</div>

<div id="discountModal" class="modal fade" role="dialog">
  <div class="modal-dialog modal-md">
		<div class="modal-content">
		  <div class="modal-header">
				<h2 class="modal-title"><b>Enter discount</b></h2>
			<button type="button" class="close" data-dismiss="modal">&times;</button>
		  </div>
		  <div class="modal-body">
				<div class="input-group extraoptions padd col-sm-12" id="manualdiscount">
					<input placeholder="Discount" name="discount" id="discount" type="text" class="form-control">
					<select name="discount_type" id="discount-type" class="form-control">
						<option value="F">{{ text_fixed }}</option>
						<option value="P">{{ text_percent }}</option>
					</select>
					<input type="button" value="{{ button_discount }}" data-loading-text="{{ text_loading }}"  class="btn cartcoupon manualdiscount1" />
				</div>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">
var utoken = '{{ user_token }}';
$(document).on('click','.addsplitpayment',function() {
	$('#splitpayment').toggle('show',function(){
		$val = $('#splitpayment').attr('class');
		if ($val == 'hide') {
			$('#splitpayment').attr('class','show');
			html1 = '<option value="split" selected="selected">{{ text_split }}</option>';
			$('#selectcard').html(html1);
			$('#selectcard').trigger('change')
		}else{
			$('#splitpayment').attr('class','hide');
			html2 = '';
			{% for result in setting_paymentmethods %}
			html2 += '<option value="{{ result.name }}">{{ result.name }}</option>';
			{% endfor %}
			$('#selectcard').html(html2);
			$('#selectcard').trigger('change')
		}
	});
});
</script>
